                  <h4>{{ section.settings.mainheadingtext }}</h4>
                {%- endif -%}
                {%- if section.settings.biginfotext != blank -%}
                  <h3>{{ section.settings.biginfotext }}</h3>
                {%- endif -%}
                {%- if section.settings.smallinfotext != blank -%}
                  {{ section.settings.smallinfotext }}
                {%- endif -%}
                {%- if section.settings.mainbtntext != blank and section.settings.mainbtnlink != blank -%}
                  <div class="Index_banner_overlay_text_alltexts_button_new">
                    <a href="{{ section.settings.mainbtnlink }}" class="btn btn--inverse">
