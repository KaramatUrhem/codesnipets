    </div>
  </div>
{%- endif -%}

{% schema %}
  {
    "name": "Index Banner Overlay Text",
    "class": "Index_banner_overlay_text_new",
    "settings": [
      {
        "type": "color",
        "id": "mainbackcolor",
        "label": "Select Main Background Color Display",
        "default": "#F6F2F1"
      },
      {
        "type": "image_picker",
        "id": "maindesktopimage",
        "label": "Add Main Desktop Image Display"
      },
      {
        "type": "image_picker",
        "id": "mainmobileimage",
        "label": "Add Main Mobile Image Display"
      },
      {
        "type": "text",
        "id": "mainheadingtext",
        "label": "Add Main Heading Text Display",
        "default": "The Aurus Bride"
      },
      {
        "type": "textarea",
        "id": "biginfotext",
        "label": "Add Big Information Text Display",
        "default": "Wedding jewelry-"
      },
      {
        "type": "richtext",
        "id": "smallinfotext",
        "label": "Add Small Information Text Display",
        "default": "<p>an extension of your personality</p>"
      },
      {
        "type": "text",
        "id": "mainbtntext",
        "label": "Add Main Button Text Display",
        "default": "Connect With Us"
      },
      {
        "type": "url",
        "id": "mainbtnlink",
        "label": "Add Main Button Link Display",
        "default": "/"
      }
    ],
    "presets": [
      {
        "name": "Index Banner Overlay Text"
      }
    ]
  }
{% endschema %}