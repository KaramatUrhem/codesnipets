<div class="reviews">
{%- if section.settings.divider -%}<div class="section--divider">{%- endif -%}

<div class="page-width">
  {%- if section.settings.title != blank -%}
    <div class="section-header text-{{ section.settings.align_text }}">
      <h2>{{ section.settings.title }}</h2>
    </div>
  {%- endif -%}

  <div class="grid{% unless section.blocks.size == 5 %} grid--uniform{% endunless %} grid--flush-bottom">
  
    {%- for block in section.blocks -%}
     
        {%- assign column_width = 'medium-up--one-half' -%}
     
      
      <div class="grid__item {{ column_width }} text-{{ section.settings.align_text }}" {{ block.shopify_attributes }} data-aos="row-of-3">
      <div class="section_background_wrapper">
      {%- if block.settings.image != blank -%}
        <div class="image_wrapper_block"> 
      {%- if block.settings.enable_image -%}
          <div style="{% if section.settings.align_text == 'center' %}margin: 0 auto;{% endif %}">
            {%- if block.settings.button_link != blank -%}
              <a href="{{ block.settings.button_link }}">
            {%- endif -%}
            {%- if block.settings.image != blank -%}
              <div class="image-wrap text-spacing">
              <img src="{{ block.settings.image | img_url:'master' }}" class="image-{{ block.settings.image_align_text }}"/>  
              </div>
           
            {%- endif -%}
            {%- if block.settings.button_link != blank -%}
              </a>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
      {%- endif -%}
        <div class="content_wrapper_block {% if block.settings.image == blank %}content_wrapper_full{% endif %}">
        {%- if block.settings.text != blank -%}
          <div class="rte-setting text-spacing">{{ block.settings.text | truncate:150 }}
          {% if block.settings.text.size >150 %}<button open-modal="{{ block.settings.title | handle }}_{{ block.id }}">Read More</button>
            <div class="modal1" id="{{ block.settings.title | handle }}_{{ block.id }}">
  <div class="box">
   <div class="close" close-modal><svg width="18" height="17" viewBox="0 0 18 17" fill="none" xmlns="http://www.w3.org/2000/svg">
<line x1="1" y1="15.8652" x2="15.8651" y2="1.00007" stroke="#1C1C24" stroke-width="1.6" stroke-linecap="round"/>
<line x1="2.09621" y1="1.00049" x2="16.9614" y2="15.8656" stroke="#1C1C24" stroke-width="1.6" stroke-linecap="round"/>
</svg>
</div>
    <div class="modal__box">
      
      <div class="modal_block_content {% if block.settings.image == blank %}content_wrapper_full{% endif %}">
        {{ block.settings.text }}
     {%- if block.settings.title != blank -%}
          <h3>{{ block.settings.title }}</h3>
        {%- endif -%}
      {%- if block.settings.location != blank -%}
          <h5>{{ block.settings.location }}</h5>
        {%- endif -%}
      </div>
      {% if block.settings.image != blank %}
      <div class="modal_block_image">
         <img src="{{ block.settings.image | img_url:'master' }}" class="image-{{ block.settings.image_align_text }}"/>  
      
      </div>
        {% endif %}
    </div>
           
    
  </div>
</div>
            {% endif %}
          
          </div>
        {%- endif -%}
       {%- if block.settings.title != blank -%}
          <h3>{{ block.settings.title }}</h3>
        {%- endif -%}
      {%- if block.settings.location != blank -%}
          <h5>{{ block.settings.location }}</h5>
        {%- endif -%}
      
        </div>
      </div>
      </div>
    {%- endfor -%}
  </div>
</div>

{%- if section.settings.divider -%}</div>{%- endif -%}
</div>
<style>
  .reviews .section_background_wrapper button{font-style: normal;
    font-weight: 500;
    font-size: 15px;
    line-height: 21px;
    text-align: center;
    color: #1C1C24;
    padding: 0;
    text-decoration-line: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 1.5px;}
  .reviews .modal1 {
  position: fixed;
  top: 0px;
  pointer-events: none;
  left: 0px;
  background:rgba(28, 28, 30, 0.5);
  width: 100vw;
  height: 100vh;
  z-index: 100;
  opacity: 0;
  transition: 0.3s;
}
.reviews .modal1.active {
  opacity: 1;
  pointer-events: auto;
  backdrop-filter: blur(3px);
}
.reviews .modal1.active .box {
  top: 50%;
}
.reviews .modal1#success h1 {
  font-size: 1.5em;
}
.reviews .modal1 .close {
  position: absolute;
  top: 15px;
  right: 15px;
  cursor: pointer;
}
.reviews .modal1 .box {
  background: #F6F2F1;
  display: block;
  box-sizing: border-box;
  text-align: center;
  padding:40px 50px;
  min-width: 744px;
  position: absolute;
  top: 70%;
  left: 50%;
  transform: translate(-50%, -50%);
  transition: 0.3s;
}
  @media(max-width:450px){
    .reviews .modal1 .box{max-width:338px;min-width:338px;padding: 24px;}
    .reviews .section_background_wrapper button{font-size: 13px;line-height:16px;}
    .reviews .modal__box{justify-content: center;}
    .reviews .modal_block_content {order: 2;margin-top: 15px;}
    .reviews .modal_block_content p{margin-bottom: 18px;max-width: 273px;min-width: 273px;}
    .reviews .modal_block_image{order:1;min-width: 290px;}
    .reviews .modal_block_image img{max-width: 290px;}
    .reviews .modal_block_content h3 {margin-bottom: 4px;}
    .reviews .modal1 .close{top: 9px;right: 6px;}
    .reviews .modal1 .close svg{width:12px;height:12px;}
  }
</style>

{% schema %}
{
  "name": "Reviews",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.text-columns.settings.title.label"
    },
    {
      "type": "select",
      "id": "align_text",
      "label": "t:sections.text-columns.settings.align_text.label",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "t:sections.text-columns.settings.align_text.options.left.label"
        },
        {
          "value": "center",
          "label": "t:sections.text-columns.settings.align_text.options.center.label"
        },
        {
          "value": "right",
          "label": "t:sections.text-columns.settings.align_text.options.right.label"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "divider",
      "label": "t:sections.text-columns.settings.divider.label",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "t:sections.text-columns.blocks.column.name",
      "settings": [
        {
          "type": "checkbox",
          "id": "enable_image",
          "label": "t:sections.text-columns.blocks.column.settings.enable_image.label",
          "default": true
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.text-columns.blocks.column.settings.image.label"
        },
        {
          "type":"select",
          "id":"image_align_text",
          "label":"Image Focal Point",
          "default":"center",
          "options": [
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "bottom",
              "label": "Bottom"
            },
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "right",
              "label": "Right"
            },
            {
              "value": "top",
              "label": "Top"
            }
          ]
        },
        {
          "type": "text",
          "id": "title",
          "label": "t:sections.text-columns.blocks.column.settings.title.label",
          "default": "Example title"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "t:sections.text-columns.blocks.column.settings.text.label",
          "default": "<p>Use this section to explain a set of product features, to link to a series of pages, or to answer common questions about your products. Add images for emphasis.</p>"
        },
        
        {
          "type": "text",
          "id": "location",
          "label": "Location",
          "default": "India"
        }
      ]
    }
  ],
  "presets": [
      {
        "name": "Reviews"
      }
    ]
}
{% endschema %}
